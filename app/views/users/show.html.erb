
<div class="container">
    <h1>User Detail</h1>
    <button type="button" class="post-button"><%= link_to "Post", new_user_post_path( user_id: @user.id), { class: "user-link" } %></button>

    <%= render partial: "/shared/user", locals: { user: @user } %>
    <div class="user-bio">
        <h5>Bio</h5>
        <p><%= @user.bio %></p>
    </div>
    <div class="user-posts">
        <h5>Posts</h5>
        <% @user.three_latest_posts.each.with_index(1) do |post, index| %>
            <a href="/users/<%= @user.id %>/posts/<%= post.id %>">
                <%= render partial: "/shared/post", locals: { post: post, index: index } %>
            </a>
        <% end %>
        <a href="/users/<%= @user.id %>/posts">
            <button class="btn btn-primary">See all posts</button>
        </a>
    </div>
</div>