<div class="container">
    <h1>New Post</h1>
    <%= form_with model: @new_post, url: user_posts_path(user_id: @user.id) do |form| %> 
        <div class="form-group">
            <%= form.label :Title %>
            <%= form.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= form.label :Text %>
            <%= form.text_area :text, size:"100x10", class: "form-control" %>
        </div>
        <% if flash.now[:alert] %>
            <p class="alert"><%= flash[:alert] %></p>
        <% end %>
        <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
</div>