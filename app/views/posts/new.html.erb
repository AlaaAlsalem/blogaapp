<div class="container">
  <h1>New Post</h1>
  <%= form_with model: @post, url: user_posts_path(user_id: @user.id) do |form| %> 
    <div class="form-group">
      <%= form.label :Title %>
      <%= form.text_field :Title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :Text %>
      <%= form.text_area :Text, rows: 10, cols: 100, class: "form-control" %>
    </div>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
      
    <%= form.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
